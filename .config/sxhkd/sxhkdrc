super + e
	emacsclient -c -a emacs

super + a ; {b,e,m,c}
	{firefox,thunar,spotify & alacritty -e cava,vscodium}

super + {alt,ctrl,alt + ctrl} + Escape
	sudo systemctl {suspend,reboot,poweroff}

XF86MonBrightnessUp
  brightnessctl --device='intel_backlight' set +3%

XF86MonBrightnessDown
  brightnessctl --device='intel_backlight' set 3%-

XF86KbdBrightnessUp
  brightnessctl --device='smc::kbd_backlight' set +3%

XF86KbdBrightnessDown
  brightnessctl --device='smc::kbd_backlight' set 3%-

XF86AudioRaiseVolume
  pamixer -i 3

XF86AudioLowerVolume
  pamixer -d 3

XF86AudioMute
  pamixer -t
